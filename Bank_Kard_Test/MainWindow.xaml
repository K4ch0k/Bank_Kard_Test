<Window x:Class="Bank_Kard_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_Kard_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Label Content="Навигационное меню" HorizontalAlignment="Center"/>
            <Button Name="CardTable" Content="Таблица карт" Click="CardTable_Click"/>
            <Button Name="OwnerTable" Content="Таблица людей" Click="OwnerTable_Click"/>
            <Button Name="AddCard" Content="Добавить карту" Click="AddCard_Click"/>
            <Button Name="AddOwner" Content="Добавить человека" Click="AddOwner_Click"/>
        </StackPanel>

        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />


    </Grid>
</Window>
